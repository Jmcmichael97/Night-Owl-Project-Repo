@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register confirmation";
}

<section class="vh-80" style="border-radius: 1rem; background-color: #9A616D;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-80">
            <div class=" col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">
                                @{
                                    if (@Model.DisplayConfirmAccountLink)
                                    {
                                <p>
                                    This app does not currently have a real email sender registered, see <a href="https://aka.ms/aspaccountconf">these docs</a> for how to configure a real email sender.
                                    Normally this would be emailed: <a id="confirm-link" href="@Model.EmailConfirmationUrl">Click here to confirm your account</a>
                                </p>
                                    }
                                    else
                                    {
                                
                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <span class="h1 fw-bold mb-0">An email confirmation is on its way! Please check your email to confirm your account. Happy Adventuring!</span>
                                    </div>
                                        
                                
                                    }
                                }  
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>