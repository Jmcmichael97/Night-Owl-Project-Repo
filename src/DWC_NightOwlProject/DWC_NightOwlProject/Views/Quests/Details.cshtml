@model DWC_NightOwlProject.Data.Quest

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Quest Details</h1>

<div>
    <hr />
    <dl class="row" style="color: rgb(238, 217, 222)">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreationDate)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Completion)
        </dt>
        <dd class="col-sm-10" id="completion" style="color: rgb(238, 217, 222)">
            @Html.DisplayFor(model => model.Completion)
        </dd>

        <div>
            <a asp-action="Index" style="color: rgb(238, 217, 222)">Back to List</a>
        </div>

    </dl>
</div>

<script>
    var completion = document.querySelector("#completion");
    completion.innerHTML = completion.innerHTML.replaceAll(/(^|\n)(Act \d+:|Epilogue:)/g, "\n<br>$2<br>\n");
</script>

