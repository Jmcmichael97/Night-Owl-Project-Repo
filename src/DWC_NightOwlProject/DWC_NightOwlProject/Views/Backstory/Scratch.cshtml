@model DWC_NightOwlProject.Data.TemplateViewModel


<script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/1.5.0/p5.js"></script>@*this is the one that messes it up*@
<script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/1.5.0/addons/p5.sound.min.js"></script>
<script src="~/js/BackstoryAnimation.js"></script>
<div class="text-center" id="title">
    <h2>Backstory Creation</h2>
</div>

<div class="text-center" id="adviceBox">
    <span>There is a lot to explore in the vastness of the world, but the question lies within yourself...</span>
</div>


<h2>Crafting Table</h2>



        <form id="create-template-form">
            <div class="container">
                <div class="row-cols-lg-1">
                    <div class="col">

                    <label for="fromScratch" class="control-label">Describe your Backstory in as little or as much details as you like:</label>
                <input id="fromScratch-input" name="fromScratch" class="text-xxl-center" type="text" required min = "0" max="1000"/>

                </div>
                    <div class="col">


                    <label for="maxLength" class="control-label">How long should this backstory be, from 100 to 1000 characters?</label>
                    <input id="maxLength-input" name="maxLength" class="form-control" type="range" required min="100" max="1000"/>





                    <label for="temp" class="control-label">Please adjust AI Temperature, ie, randomness!</label>
                    <input id="temp-input" name="temp" class="form-control" type="range" required step=0.1 min ="0" max="1" />





                    <label for="presence" class="control-label">Please adjust Presence, ie, how different each idea in the backstory will be.</label>
                    <input id="presence-input" name="presence" class="form-control" type="range" required min="-2.0" max="2.0" />





                    <label for="frequency" class="control-label">Please adjust Frequency, ie, how different each word will be.</label>
                    <input id="frequency-input" name="frequency" class="form-control" type="range" required min="-2.0" max="2.0" />


            </div>
  </div>
</div>

                <div class="text-danger">
                    These criteria are optional, but please fill out as many as you can before clicking "Create Your Backstory"
                </div>




            <div class="form-group mt-3 text-center">
                <div class="container">
  <div class="row">
    <div class="col-sm">
       <input type="submit" class="Prompt" value="Submit Your Template" /> <br /> <br />
    </div>
    <div class="col-sm">
      
    </div>
    <div class="col-sm">
                    <input type="button" class="" value="Create Your Backstory" onclick="toggle(); window.location= '@Url.Action( "Completion", "Backstory")'" />
    </div>
  </div>
</div>
               
                
                

            </div>
        </form>




