@model DWC_NightOwlProject.Data.MaterialVM
@{
    ViewData["Title"] = "Index";
}


<script type="module" src="https://cdnjs.cloudflare.com/ajax/libs/tone/14.8.49/Tone.min.js"></script>

<script src="~/js/MapAnimation.js"></script>
<script src="/js/toneLib.js"></script>



<header>
    <br />
    <br />
    <h1>
        Songs
    </h1>

    <h4>
        A good set of songs is the heart of any good campaign.
        <br />
        <br />
        
    </h4>

</header>


<div class="text-center" id="title">
    <h1>Song Creation</h1>
</div>




<h4>
    <br />
    <br />
    Craft your Song in one of two ways. You can have up to 4 Song materials at once before you have to start deleting them!
</h4>



<div class="text-center" id="adviceBox">
</div>





<div class="container">
    <div class="row">



        <div class="col-sm">
            <h2> Create your Song with a template</h2>
            <h4>Easier, Step-by-Step</h4> <br /> <br />

            <button class="btn btn-dark m-1" id="template" onclick="reveal('t','s')">Template</button>



            <t id="t">
                <form asp-action="Template" id="create_template_form" method="post">
                    <div class="container">
                        <div class="row-cols-lg-1">
                            <div class="col">

                                <label asp-for="r0" class="control-label">What is the tone of the song?</label>
                                <select asp-for="r0" class="form-control" required>
                                    <option value = "Joyful">Joyful</option>
                                    <option value = "Mysterious">Mysterious</option>
                                    <option value = "Intense">Intense</option>
                                    <option value="Romantic">Romantic</option>
                                    <option value=  "Happy">Happy</option>
                                    <option value=  "Sad">Sad</option>
                                </select>
                                <span asp-validation-for="r0" class="text-danger"></span>

                                <label asp-for="r1" class="control-label">What will the song be used for, eg. Combat, or Puzzle music?</label>
                                <input asp-for="r1" class="form-control" required />
                                <span asp-validation-for="r1" class="text-danger"></span>

                                <label asp-for="r2" class="control-label">What is the speed of the song?</label>
                                <input asp-for="r2" class="form-control" required />
                                <span asp-validation-for="r2" class="text-danger"></span>

                                <label asp-for="r3" class="control-label">What is the instrument the song will be played with?</label>
                                <input asp-for="r3" class="form-control" required />
                                <span asp-validation-for="r3" class="text-danger"></span>

                            </div>

                        </div>
                    </div>





                    <div class="form-group mt-3 text-center">

                        <input type="submit" class="btn btn-primary m-1" id="Create" value="Create Song" onclick="toggle()" />

                    </div>
                </form>

            </t>

        </div>
        <div class="col-sm">
            <h2> Create your Song From Scratch</h2>
            <h4>More difficult, but potentially more creative</h4> <br /> <br />

            <button class="btn btn-dark m-1" id="scratch" onclick="reveal('s','t')">From Scratch</button>



            <s id="s">
                <form asp-action="Scratch" id="create_scratch_form">
                    <div class="container">
                        <div class="row-cols-lg-1">
                            <div class="col">

                                <label asp-for="r0" class="control-label">Description of Your Song:</label>
                                <input asp-for="r0" class="form-control-lg" required />
                                <span asp-validation-for="r0" class="text-danger"></span>

                            </div>

                        </div>
                    </div>





                    <div class="form-group mt-3 text-center">


                        <input type="submit" class="btn btn-primary m-1" id="Create" value="Create Song" onclick="toggle()" />

                    </div>
                </form>
            </s>






        </div>


    </div>
</div>

<h2>Completions:</h2>
@if (Model != null)
{
    <div class="row">
        @for (var i = 0; i < Model.songs.Count; ++i)
        {

            <div class="col">
                @if (Model.songs[i] != null)
                {
                    <div class="row" id="notes">@Model.songs[i].Name</div>

                    <br />
                    <img src="data:image;base64,@System.Convert.ToBase64String(Model.songs[i].PictureData)" width="256" height="256" />
                    <br />

                    <a asp-controller="Songs" asp-action="details" asp-route-id="@Model.songs[i].Id" class="btn btn-primary m-1">Details</a>
                    <a asp-controller="Songs" asp-action="delete" asp-route-id="@Model.songs[i].Id" class="btn btn-danger m-1">Delete</a>

                    <div class="col-sm">
                        <input type="button" class="btn btn-dark m-1" value="Play" onclick="music(@Model.songs[i].Completion)" />



                        <input type="button" class="btn btn-dark m-1" value="Download" onclick="record(@Model.songs[i].Completion)" />
                    </div>
                }
            </div>
        }
    </div>
}

 
