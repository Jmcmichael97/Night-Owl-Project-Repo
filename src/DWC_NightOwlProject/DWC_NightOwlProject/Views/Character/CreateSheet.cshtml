@model DWC_NightOwlProject.Models.SheetRandomizer
@{
    ViewData["Title"] = "Create sheet";
}

<div>
    <form asp-action="CharacterSheet">
            <div class="form-group">
                <label asp-for="Race" class="control-label">Select character race</label>
                <select asp-for="Race" asp-items="@DWC_NightOwlProject.Models.CharacterOptions.RaceViewList"></select>
            </div>
            <div class="form-group">
                <label asp-for="Class" class="control-label">Select character class</label>
                <select asp-for="Class" asp-items="@DWC_NightOwlProject.Models.CharacterOptions.ClassViewList"></select>
            </div>
            <input type="submit" value="Generate character sheet">
    </form>
</div>