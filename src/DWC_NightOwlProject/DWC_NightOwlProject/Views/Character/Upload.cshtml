@model DWC_NightOwlProject.ViewModel.UploadViewModel

<script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/1.5.0/p5.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/1.5.0/addons/p5.sound.min.js"></script>
<script src="~/sketch.js" type="text/javascript"></script>

<div class="text-center" id="title">
    <h2>Upload a Character</h2>
</div>

<div class="text-center" id="adviceBox">
    <span>There is a lot to explore in the vastness of the world, but the question lies within yourself...</span> <br />
    <span>Upload a character image and enter what you want to add to it in the text box below </span> <br />
</div>



<form method="post" enctype="multipart/form-data" asp-action="UploadCompletion">
   <div class="container">
       <div class="row-cols-lg-1">
           <div class="col">
               <br />
               <label for="uploadButton" class="control-label" >Upload a Character</label>
               <input type="file" id="myFile" accept="image/*" required/>
               <br />
               <input class="form-control" type="text" />
               <br />
                <input type="submit" class="Prompt" value="Edit your character" /> <br /> <br />
           </div>
       </div>
   </div>
</form>
